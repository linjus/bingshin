<UserControl x:Class="clrview.NavigationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:clrview"
             Padding="5"
             Width="200" Height="25"
             mc:Ignorable="d">

    <UserControl.Background>
        <SolidColorBrush Color="AliceBlue" Opacity="0.7" />
    </UserControl.Background>
    <UserControl.Effect>
        <DropShadowEffect BlurRadius="3" ShadowDepth="1" Color="Black" Direction="270" Opacity="0.5" />
    </UserControl.Effect>

    <StackPanel Orientation="Horizontal">
        <RadioButton Name="radioRoadView" Content="Road" IsChecked="True" Checked="RadioButton_Checked" />
        <RadioButton Margin="15,0" Name="radioSatelliteView" Content="Satellite" Checked="RadioButton_Checked" />
    </StackPanel>
</UserControl>
